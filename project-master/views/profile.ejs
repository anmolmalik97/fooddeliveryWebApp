    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/fontawesome.css" integrity="sha384-q3jl8XQu1OpdLgGFvNRnPdj5VIlCvgsDQTQB6owSOHWlAurxul7f+JpUOVdAiJ5P" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="ordernow.css">

    <title>profile</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a href="" class="navbar-brand"><img src="logo.png" height="30" width="30"><strong>FOODEZZY</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
         <div class="collapse navbar-collapse" id="navbarSupportedContent">
           <ul class="navbar-nav ml-auto">
             <% if(!currentUser){ %>
              <li class="navbar-item">
               <a href="signup" class="nav-link"><i class="fas fa-user-plus"></i> Signup</a>
             </li>
              <li class="navbar-item">
               <a href="/login" class="nav-link"><i class="fas fa-user"></i>

                Login</a>
            </li>
             <%}else{%>
              <li class="navbar-item">
               <a href="#" class="nav-link"><i class="fas "></i> Welcome <%= currentUser.username %></a>
             </li>
             <li class="navbar-item">
               <a class="nav-link" href="home"><i class="fas fa-home"></i> Home</a>
             </li>
             <li class="navbar-item">
               <a href="/logout" class="nav-link"><i class="fas fa-user"></i> Logout</a>
             </li>
             <% } %>
            
           </ul>
         </div>

      </div>
      
    </nav>

<div class="container">
  <h3><%=currentUser.username%></h3>
  <%if(currentUser.profileUrl && currentUser.profileUrl.length > 0){%>
  <img src="<%=currentUser.profileUrl%>" class="img-thumbnail"  width="200px" height="200px">
  <br>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="form-group">
                    <label for="image">edit profile pic <br></label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
    <div class="form-group">
                    <button class="btn btn-primary">Submit!</button>
                </div>
  </form>
  <%}else{%>
  <img src="http://2r.co.za/wp-content/uploads/2016/08/no-image-yet.png" class="img-thumbnail" width="200px" height="200px">
  <br>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="form-group">
                    <label for="image">Add profile pic</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
    <div class="form-group">
                    <button class="btn btn-primary">Submit!</button>
                </div>
  </form>
  <%}%>
  <hr>
  <%if(orders && orders.length>0){%>
  <p>your orders</p>
  <hr>
  <%orders.forEach(function(o){%>

    <p>order id: <b><%=o._id%> </b><br>amtpaid: <b><%=o.totalprice%></b><br>payment id: <b><%=o.paymentId%></b></p>
    <a href= "/orders/<%=o._id%>"s >click for more details</a>

    <hr>

  <%})%>
<%}else{%>
  <h3>no order history</h3>
  <a href="/ordernow">click here to place order</a>
  <%}%>
  
</div>





    

